<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio1_1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="25dp">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/txtvUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:text="TextView" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgvFoto"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtvCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="48dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtvEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ems="10"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/txtvVentas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ems="10"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/txtvMes"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="34dp" />

            <TextView
                android:id="@+id/txtvPorcentaje"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="34dp" />
            <TextView
                android:id="@+id/txtvComision"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="34dp" />

            <Button
                android:id="@+id/btnRegresar"

                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>